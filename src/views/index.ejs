
<% include partials/_header %>

<div class="container">

  <div>
    <!--Crear usuario-->
    <div>
      <div class="card">
        <div class="card-body">
          <form action="/crear" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="Nombre">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="apellido" placeholder="Apellido">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="correo" placeholder="Correo">
            </div>
            <button class="btn btn-primary" type="submit">
              Crear
            </button>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Usuarios -->
    <div> 
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>NÂ°</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < usuarios.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><strong><%= usuarios[i].nombre %></strong></td>
              <td><%= usuarios[i].apellido %></td>
              <td><%= usuarios[i].correo %></td>
              <td>
                <a
                  class="<%= usuarios[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                  href="/status/<%= usuarios[i]._id %>">Activo</a>
                <a href="/delete/<%= usuarios[i]._id %>"
                  class="btn btn-danger">
                  Eliminar
                </a>
                <a href="/edit/<%= usuarios[i]._id %>" class="btn btn-info">
                  Editar
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>