<% include partials/_header %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= usuario._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="Nombre" value="<%= usuario.nombre %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="apellido" placeholder="Apellido" value="<%= usuario.apellido %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="correo" placeholder="Correo" value="<%= usuario.correo %>">
            </div>
            <button class="btn btn-primary" type="submit">
              Guardar 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer%>